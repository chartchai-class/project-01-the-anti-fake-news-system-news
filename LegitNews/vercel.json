{
  "version": 2,
  "builds": [
    { "src": "LegitNews/vite.config.js", "use": "@vercel/static-build" },
    { "src": "LegitNews/api/**/*.js", "use": "@vercel/node" }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/LegitNews/api/$1" },
    { "source": "/(.*)", "destination": "/LegitNews/" }
  ]
}
